{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "infrastructure/http/src",
  "projects": {
    "http": {
      "type": "application",
      "root": "infrastructure/http",
      "entryFile": "main",
      "sourceRoot": "infrastructure/http/src",
      "compilerOptions": {
        "tsConfigPath": "infrastructure/http/tsconfig.json"
      }
    }
  },
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true
  }
}
