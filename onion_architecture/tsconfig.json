{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@onion/core-domain": [
        "core/domain/src/index.ts"
      ],
      "@onion/core-application": [
        "core/application/src/index.ts"
      ],
      "@onion/infrastructure-persistence": [
        "infrastructure/persistence/src/index.ts"
      ]
    }
  }
}
